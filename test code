methods:
  initializeCamera:
  update:
  movePlayer:
scripts:
- |
    this.initialize = function() {

      this.future( 0 ).initializeCamera();
      this.future( 0 ).update();
    }

    this.initializeCamera = function() {
      this.camera.translation = [ 250, 0, 600 ];
      this.camera.rotation = [ 1, 0, 0, -90 ];

      // Disable navigation
      this.camera.touchmode = "none";
      this.camera.navmode = "none";
    }

    this.update = function() {
      if ( this.keyPressInfo ) {
        for ( var keyPress in this.keyPressInfo.keysDown ) {
          switch( keyPress ) {
            case 'W':
              this.movePlayer(this.userObject, 'U');
              break;
            case 'A':
              this.movePlayer(this.userObject, 'L');
              break;
            case 'S':
              this.movePlayer(this.userObject, 'D');
              break;
            case 'D':
              this.movePlayer(this.userObject, 'R');
              break;
            default:
              break;
          }
        }
      }
      this.future( 1.0/60.0 ).update();  // schedule the next step
    }

    this.movePlayer = function( player, direction ) {
      switch( direction ) {
        case 'U':
          //Checks to see if the player collides with the end of the board
          if(player.translation[1] + this.moveSpeed <= 150){
            player.translateBy( [0, this.moveSpeed, 0]);
          }
          break;
        case 'L':
          //Checks to see if the player collides with the end of the board
          if(player.translation[0] + (-1 * this.moveSpeed) >= -250){
            player.translateBy( [(-1 * this.moveSpeed), 0, 0]);
          }
          break;
        case 'D':
          //Checks to see if the player collides with the end of the board
          if(player.translation[1] + (-1 * this.moveSpeed) >= -150){
            player.translateBy( [0, (-1 * this.moveSpeed), 0]);  
          }
          break;
        case 'R':
          //Checks to see if the player collides with the end of the board
          if(player.translation[0] + this.moveSpeed <= 250){
            player.translateBy( [this.moveSpeed, 0, 0]);      
          }
          break;
        default:
          break;
      }
    }
    
    this.keyDown = this.keyUp = function( input ) {
      this.keyPressInfo = input;
    }